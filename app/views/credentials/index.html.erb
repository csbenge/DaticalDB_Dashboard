<div class="panel panel-gray">
  <div class="panel-heading">
    <i class="fa fa-key fa-2x"></i><b> <big><big>Credentials</big></big></b>
  </div>  
</div>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Credentials', credentials_path %></li>
  <li><%= link_to 'Add Credential', new_credential_path %></li>
</ul>

<div class="table">

<table class="table table-striped table-bordered table-hover table-condensed ">
  <thead>
    <tr>
      <th>User</th>
      <th>Schema</th>
      <th>Environment</th>
      <th>Application</th>
      <th style="text-align:center;">Status</th>
      <th style="text-align:center;">Snapshot</th>
      <th style="text-align:center;">Forecast</th>
      <th style="text-align:center;">Deploy</th>
      <th class="col-md-2" style="text-align:center;" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @credentials.each do |credential| %>
      <tr>
        <td><%= get_User_Name(credential.user_id) %></td>
        <td><%= get_Schema_Name(credential.schema_id) %></td>
        <td><%= get_Environment_Name_via_SchemaID(credential.schema_id) %></td>
        <td><%= get_Application_Name_via_SchemaID(credential.schema_id) %></td>
        <td style="text-align:center;"><%= raw get_Credential_Badge(credential.status) %></td>
        <td style="text-align:center;"><%= raw get_Credential_Badge(credential.snapshot) %></td>
        <td style="text-align:center;"><%= raw get_Credential_Badge(credential.forecast) %></td>
        <td style="text-align:center;"><%= raw get_Credential_Badge(credential.deploy) %></td>
        <td style="text-align:center;"><%= link_to 'Show', credential, class: 'btn btn-primary btn-xs c_btnlink' %></td>
        <td style="text-align:center;"><%= link_to 'Edit', edit_credential_path(credential), class: 'btn btn-primary btn-xs c_btnlink' %></td>
        <td style="text-align:center;"><%= link_to 'Destroy', credential, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs c_btnlink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>