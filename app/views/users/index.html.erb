<div class="panel panel-gray">
  <div class="panel-heading">
    <i class="fa fa-user fa-2x"></i><b> <big><big>Users</big></big></b>
  </div>  
</div>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Users', users_path %></li>
  <li><%= link_to 'Add User', new_user_path %></li>
</ul>

<div class="table">

<table class="table table-striped table-bordered table-hover table-condensed ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password Digest</th>
      <th colspan="3" style="text-align:center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td style="text-align:center;"><%= link_to 'Show', user, class: 'btn btn-success btn-xs' %></td>
        <td style="text-align:center;"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn-xs' %></td>
        <td style="text-align:center;"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>