<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

  <% if @user.errors.any? %>
  <div id="errorExplanation" class="bs-callout bs-callout-danger">
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="well">

  <div class="field form-group">
    <%= f.label :'User Name', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Email', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Password', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Password Confirm', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

</div>

  <div class="actions form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit @user.new_record? ? 'Create' : 'Update', :class => 'btn btn-primary btn-xs' %>
      <%= link_to 'Cancel', users_path, :class => 'c_textlink' %>
    </div>
  </div>
</form>

<% end %>
