<%= form_for(@credential, html: {class: "form-horizontal"}) do |f| %>

  <% if @credential.errors.any? %>
  <div id="errorExplanation" class="bs-callout bs-callout-danger">
    <h4><%= pluralize(@credential.errors.count, "error") %> prohibited this credential from being saved:</h4>
    <ul>
    <% @credential.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="well">

  <div class="field form-group">
    <%= f.label :'User', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= collection_select(:credential, :user_id, User.all, :id, :name) %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Schema', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= collection_select(:credential, :schema_id, Schema.all, :id, :name) %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Status', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.check_box :status %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Snapshot', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.check_box :snapshot %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Forecast', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.check_box :forecast %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Deploy', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.check_box :deploy %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit @credential.new_record? ? 'Create' : 'Update', :class => 'btn btn-primary btn-xs' %>
      <%= link_to 'Cancel', credentials_path, :class => 'c_textlink' %>
    </div>
  </div>

</div>

<% end %>
